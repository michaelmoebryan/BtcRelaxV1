<?php
    require_once 'phpmailer/class.phpmailer.php';
    require_once 'functions.inc.php';
    require_once 'ganja/ganja_order.php';
    $resultMsg = 'Произошла ошибка при регистрации! Попробуйте позже.';
	if(isset($_POST["langCode"]))
		{
			$vLang =  $_POST["langCode"];
		}
		else
		{
			$vLang = 'uk';
		}
	if (isset($_POST["email"]) )
	{
           $targetMail = $_POST["email"]; 
               if (preg_match("/^[0-9a-zA-Z\.\-\_]+\@[0-9a-zA-Z\.\-\_]+\.[0-9a-zA-Z\.\-\_]+$/is", trim($targetMail)))
               {
                   $isSentEmail = RegisterNewOrder($targetMail, $vLang );
                   if  (isset($isSentEmail))
                   {
                       if($isSentEmail == 'Ok')
                       {
                          $redirLoc = 'Location: /order.php';
                          header($redirLoc, true);
                       }
                       else
                       {
                          $resultMsg = $isSentEmail; 
                       };
                   };                   
               }
               else
               {
                $resultMsg = 'Incorrect E-mail address!';                   
               };
	};
	echo $resultMsg;
?>

